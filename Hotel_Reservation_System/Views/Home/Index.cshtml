    <script>
        $(document).ready(function () {
            $("#submitBtn").click(function (e) {
                e.preventDefault(); // Prevent the default behavior of the button

                var RoomCapacity = $("#dropdown").val();
                var checkInValue = $("#date1 input").val();
                var checkOutValue = $("#date2 input").val();

                // Convert input values to Date objects for comparison
                var checkInDate = new Date(checkInValue);
                var checkOutDate = new Date(checkOutValue);
                var currentDate = new Date();

                // Remove the time part from the current date'
                checkInDate.setHours(0, 0, 0, 0);
                checkOutDate.setHours(0, 0, 0, 0);
                currentDate.setHours(0, 0, 0, 0);

                // Check if check-in date is valid
                if (checkInDate < currentDate) {
                    showPopup("Check-in date must be greater than or equal to the current date.");
                    return;
                }

                // Check if check-out date is after check-in date
                if (checkOutDate <= checkInDate) {
                    showPopup("Check-out date must be after the check-in date.");
                    return;
                }

                // Make an AJAX request if validation passes
                $.ajax({
                    url: '@Url.Action("FilteredRooms", "Rooms")', // Correct the URL as per your routing setup
                    type: 'GET',
                    data: {
                        capacity: RoomCapacity,
                        checkIn: checkInValue,
                        checkOut: checkOutValue
                    },
                    success: function (response) {
                        window.location.href = "@Url.Action("FilteredRooms", "Rooms")?capacity=" + RoomCapacity + "&checkIn=" + checkInValue + "&checkOut=" + checkOutValue;
                    },
                    error: function (error) {
                        // Show error message
                        showPopup("An error occurred while making the booking.");
                        console.error("Error during AJAX request", error);
                    }
                });
            });
        });

        function showPopup(message) {
            var $popupMessage = $("#popupMessage");
            $("#popupText").text(message);
            $popupMessage.slideDown(200);

            setTimeout(function () {
                $popupMessage.slideUp(200);
            }, 3000); // Message will disappear after 3 seconds
        }
    </script>
