    <div style="margin-bottom: 100px;">
        <form style="margin: auto;" onsubmit="return validateForm()" asp-action="Create" asp-controller="Billings" method="post" class="row">
            <h1>Payment Details</h1>
            <section>

                <h2>Personal Information</h2>

                <label for="last-name">Last Name:</label>
                <input type="text" id="last-name" required>

                <label for="first-name">First Name:</label>
                <input type="text" id="first-name" required>

                <label for="city">City:</label>
                <input type="text" id="city" required>

                <label for="state">Province/State:</label>
                <input type="text" id="state" required>

                <label for="country">Country:</label>
                <select id="country" required>
                    <option value="">Select Country</option>
                    <option value="Canada">Canada</option>
                    <option value="US">US</option>
                </select>

                <label for="postal-code">Postal Code:</label>
                <input type="text" id="postal-code" placeholder="e.g. A1A 1A1" required>

                <label for="phone">Phone:</label>
                <input type="text" id="phone" placeholder="e.g. 123-456-7890" required>

                <label for="email">Email:</label>
                <input type="email" id="email" required>
            </section>

            <section>
                <h2>Card Details</h2>

                <label for="card-type">Card Type:</label>
                <select name="PaymentMethod" class="form-control" id="card-type" required>
                    <option value="MasterCard">MasterCard</option>
                    <option value="Visa">Visa</option>
                    <option value="American Express">American Express</option>
                    <!-- Add more payment methods as required -->
                </select>

                <label for="card-number">Card Number:</label>
                <input type="text" id="card-number" placeholder="e.g. 1111-2222-3333-4444" required>

                <label for="cvv">CVV:</label>
                <input type="password" id="cvv" placeholder="e.g. 123" required>

                <label for="expiration-date">Expiration Date:</label>
                <div style="display: flex;">
                    <input type="month" id="expiration-date" required>
                </div>
                <!-- Hidden ReservationID -->
                <input type="hidden" name="ReservationID" value="@ViewBag.ReservationID" />
                <input type="hidden" name="TotalAmount" class="form-control" readonly value="@ViewBag.TotalAmount" />

                <!-- Room Rate as Total Amount (readonly) -->
            </section>

            <!-- Submit Button -->
            <!-- Submit Button -->
            <input type="submit" value="Pay @ViewBag.TotalAmount $" class="btn btn-primary custom-submit-btn" />
        </form>
    </div>

