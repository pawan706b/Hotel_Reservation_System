    <script>
        function validateForm() {
            // Get form inputs
            var lastName = document.getElementById('last-name').value;
            var firstName = document.getElementById('first-name').value;
            var city = document.getElementById('city').value;
            var state = document.getElementById('state').value;
            var country = document.getElementById('country').value;
            var postalCode = document.getElementById('postal-code').value;
            var phone = document.getElementById('phone').value;
            var email = document.getElementById('email').value;
            var cardType = document.getElementById('card-type').value;
            var cardNumber = document.getElementById('card-number').value;
            var expirationDate = document.getElementById('expiration-date').value;
            var cvv = document.getElementById('cvv').value;

            // Define regex patterns
            var namePattern = /^[a-zA-Z]+(?:[\s-][a-zA-Z]+)*$/;
            var cityStatePattern = /^[a-zA-Z\s]+$/;
            var usZipCodePattern = /^\d{5}(-\d{4})?$/;
            var canadianPostalCodePattern = /^[A-Za-z]\d[A-Za-z][ -]?\d[A-Za-z]\d$/;
            var phonePattern = /^(\+?1\s*[-.\s]?)?(\()?([2-9][0-9]{2})(\)?)([-.\s]?[0-9]{3})([-.\s]?[0-9]{4})$/;
            var emailPattern = /^\w+([\.-]?\w+)@@\w+([\.-]?\w+)(\.\w{2,3})+$/;
            var mastercardPattern = /^(5[1-5][0-9]{14})$/;
            var visaPattern = /^4[0-9]{12}(?:[0-9]{3})?$/;
            var amexPattern = /^3[47][0-9]{13}$/;
            var cvvPattern = /^\d{3,4}$/;

            console.log(!namePattern);
            // Validate Last Name
            if (!namePattern.test(lastName)) {
                alert('Invalid characters in last name.');
                return false;
            }

            // Validate First Name
            if (!namePattern.test(firstName)) {
                alert('Invalid characters in first name.');
                return false;
            }

            // Validate City
            if (!cityStatePattern.test(city)) {
                alert('Invalid characters in city.');
                return false;
            }

            // Validate State
            if (!cityStatePattern.test(state)) {
                alert('Invalid characters in state.');
                return false;
            }

            // Validate Country
            if (country !== 'Canada' && country !== 'US') {
                alert('Invalid country selection.');
                return false;
            }

            // Validate Postal Code
            if ((country === 'Canada' && !canadianPostalCodePattern.test(postalCode)) ||
                (country === 'US' && !usZipCodePattern.test(postalCode))) {
                alert('Invalid postal code.');
                return false;
            }

            // Validate Phone
            if (!phonePattern.test(phone)) {
                alert('Invalid Phone Number.');
                return false;
            }

            // Validate Email
            if (!emailPattern.test(email)) {
                alert('Invalid email address.');
                return false;
            }

            // Validate Card Number
            if ((cardType === 'MasterCard' && !mastercardPattern.test(cardNumber)) ||
                (cardType === 'Visa' && !visaPattern.test(cardNumber)) ||
                (cardType === 'American Express' && !amexPattern.test(cardNumber))) {
                alert('Invalid card number.');
                return false;
            }

            // Validate CVV
            if (!cvvPattern.test(cvv)) {
                alert('Invalid CVV.');
                return false;
            }

            // Validate Expiration Date
            var today = new Date();
            var expDate = new Date(expirationDate);
            if (expDate < today) {
                alert('Card expiration date cannot be in the past.');
                return false;
            }

            // If all validations pass, submit the form
            alert('Form submitted successfully!');
            return true;
        }

        function showPopup(message) {
            showPopup(message)
            // Set the message in the modal
            
        }

    </script>

